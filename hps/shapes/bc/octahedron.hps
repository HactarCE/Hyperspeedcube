use * from euclid

export id = "octahedron"
export name = "Octahedron"
export adjective = "Octahedral"
export aliases = ["4-Orthoplex"]
export facet_colors = id
export ndim = 3
export shape_tag = "3d/platonic/octahedron"

export fn new() -> Map { new(ident()) }
export fn new(t: Transform) -> Map {
    export fn transform_by(t2: Transform) -> Map { new(t2 * t) }

    export id, name, adjective, aliases, facet_colors, ndim, shape_tag
    export sym = t.transform(cd("bc3"))

    export facet_pole = sym.xoo.unit
    export facet_names = sym.names(point(facet_pole), #{
        R  = [2, "D"],
        L  = [0, "F"],
        U  = [2, "BL"],
        D  = [1, "L"],
        F  = [],
        BR = [1, "U"],
        BL = [0, "D"],
        BD = [0, "BR"], // B in standard notation
    })

    export vertex_pole = sym.oox.unit * âˆš3
}

