use * from euclid

add_puzzle(
    id = "test",
    engine = "euclid",
    ndim = 3,
    colors = "cube",
    build = fn(p) {
        cube = @symmetries/bc3.cube()
        with #sym = cd("bc3") {
            p.carve(plane(#sym.oox.unit), cube.face_names)
            ax = p.add_axis(#sym.oox.unit, cube.face_names, [1,1/3,-1/3,-1])
            p.add_twist(ax, #sym.thru([1, 0]), gizmo_pole_distance=1)
        }
    },
)
