export fn cube() -> Map {
    use * from euclid

    export name = "Cube"
    export aliases = ["3-Cube", "Hexahedron", "1x1x1"]
    export face_colors = "cube"
    export sym = cd("bc3")

    export face_pole = sym.oox.unit
    export face_names = sym.names(point(face_pole), #{
        F = [],
        U = [2, "F"],
        R = [1, "U"],
        L = [0, "R"],
        D = [1, "L"],
        B = [2, "D"],
    })

    export edge_pole = sym.oxo.unit * âˆš2
    export edge_names = sym.names(point(edge_pole), #{
        "{FU}" = [],
        "{FR}" = [1, "FU"],
        "{FL}" = [0, "FR"],
        "{FD}" = [1, "FL"],
        "{UR}" = [2, "FR"],
        "{UL}" = [2, "FL"],
        "{DR}" = [1, "UL"],
        "{DL}" = [0, "DR"],
        "{BU}" = [2, "FD"],
        "{BR}" = [1, "BU"],
        "{BL}" = [0, "BR"],
        "{BD}" = [1, "BL"],
    })
}

export fn octahedron() {
    export name = "Octahedron"
    export aliases = ["4-Orthoplex"]
    export face_colors = "octahedron"
    export sym = cd("bc3")

    export face_pole = sym.xoo.unit
    export face_names = sym.names(point(face_pole), #{
        R  = [3, "D"],
        L  = [1, "F"],
        U  = [3, "BL"],
        D  = [2, "L"],
        F  = [],
        BR = [2, "U"],
        BL = [1, "D"],
        BD = [1, "BR"], // B in standard notation
    })
}

